<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <RadioGroup
        android:id="@+id/radioGroupMethod"
        android:layout_width="355dp"
        android:layout_height="287dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/semantic_similarity_method" />

        <RadioButton
            android:id="@+id/radioButtonWUPLIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/method_wuplin" />

        <RadioButton
            android:id="@+id/radioButtonWUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/method_wup" />

        <RadioButton
            android:id="@+id/radioButtonLIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/method_lin" />

        <RadioButton
            android:id="@+id/radioButtonLESK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/method_lesk" />

        <Switch
            android:id="@+id/switchOverworld"
            android:layout_width="355dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="@string/switch_battle"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="303dp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>